{
  "name": "@thebespokepixel/verbosity",
  "version": "0.0.21",
  "description": "Automatically handle verbose logging to a tty.",
  "main": "index.js",
  "scripts": {
    "test": "vows test/*.coffee --spec"
  },
  "keywords": [
    "console",
    "cli",
    "verbose"
  ],
  "author": "Mark Griffiths <mark@cryptocomposite.com>",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGriffiths/verbosity.git"
  },
  "engines": {
    "node": ">=0.12"
  },
  "bugs": {
    "url": "https://github.com/MarkGriffiths/verbosity/issues",
    "email": "mark@cryptocomposite.com"
  },
  "homepage": "https://github.com/MarkGriffiths/verbosity#readme",
  "devDependencies": {
    "@thebespokepixel/grunt-coffeescript": "^1.1.0",
    "coffee-script": "^1.10.0",
    "esformatter": "^0.8.1",
    "esformatter-asi": "^0.5.2",
    "esformatter-literal-notation": "^1.0.1",
    "esformatter-quotes": "^1.0.3",
    "esformatter-spaced-lined-comment": "^2.0.1",
    "esformatter-use-strict": "^2.0.2",
    "esformatter-var-each": "^2.1.0",
    "grunt": "^0.4.5",
    "grunt-bump": "^0.6.0",
    "grunt-esformatter": "^1.1.0",
    "grunt-force-task": "^1.0.0",
    "grunt-shell": "^1.1.2",
    "grunt-text-replace": "^0.4.0",
    "grunt-version": "^1.0.0",
    "load-grunt-tasks": "^3.3.0",
    "vows": "^0.8.1",
    "xo": "^0.10.1"
  },
  "xo": {
    "semicolon": true
  },
  "esformatter": {
    "plugins": [
      "esformatter-var-each",
      "esformatter-quotes",
      "esformatter-spaced-lined-comment",
      "esformatter-use-strict",
      "esformatter-literal-notation",
      "esformatter-asi"
    ],
    "quotes": {
      "type": "single"
    },
    "indent": {
      "value": "\t"
    }
  }
}
