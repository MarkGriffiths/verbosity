{
  "name": "verbosity",
  "version": "0.4.1",
  "description": "Verbose logging features for ttys or any writable stream.",
  "main": "index.js",
  "scripts": {
    "test": "gulp test --verbose"
  },
  "keywords": [
    "console",
    "cli",
    "verbose"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "license": "MIT",
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkGriffiths/verbosity.git"
  },
  "engines": {
    "node": ">= 4.2 <6.0"
  },
  "bugs": {
    "url": "https://github.com/MarkGriffiths/verbosity/issues",
    "email": "mark@thebespokepixel.com"
  },
  "homepage": "https://github.com/MarkGriffiths/verbosity#readme",
  "dependencies": {
    "chalk": "^1.1.1",
    "dateformat": "^1.0.12",
    "sparkles": "^1.0.0",
    "term-ng": "*"
  },
  "devDependencies": {
    "@thebespokepixel/cordial": "*",
    "semver-regex": "^1.0.0",
    "shelljs": "^0.6.0"
  },
  "build_number": 124,
  "ava": {
    "files": [
      "test/*.js"
    ],
    "failFast": true,
    "verbose": true
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignores": [
      "lib/**/*.js",
      "index.js"
    ],
    "rules": {
      "camelcase": 0,
      "prefer-const": 1,
      "no-var": 0,
      "key-spacing": [
        0, {
          "beforeColon": false,
          "afterColon": false
        }
      ],
      "new-cap": [
        2, {
          "newIsCap": false,
          "capIsNew": true
        }
      ]
    }
  }
}