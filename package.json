{
  "name": "verbosity",
  "version": "1.0.1",
  "description": "Verbose logging features for ttys or any writable stream.",
  "main": "index.js",
  "module": "index.mjs",
  "scripts": {
    "test": "xo && nyc ava",
    "doc-serve": "documentation serve --watch --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --project-name $npm_package_name  --project-version $npm_package_version src/index.js",
    "doc-build": "documentation build --format html --output docs --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --project-name $npm_package_name  --project-version $npm_package_version src/index.js",
    "readme": "compile-readme -u src/docs/example.md src/docs/readme.md > readme.md",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html",
    "clean": "gulp clean"
  },
  "files": [
    "index.js",
    "index.mjs"
  ],
  "keywords": [
    "console",
    "cli",
    "verbose"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "copyright": {
    "year": "2019",
    "owner": "Mark Griffiths @ The Bespoke Pixel"
  },
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkGriffiths/verbosity.git"
  },
  "engines": {
    "node": ">=8.0"
  },
  "bugs": {
    "url": "https://github.com/MarkGriffiths/verbosity/issues",
    "email": "mark@thebespokepixel.com"
  },
  "homepage": "https://github.com/MarkGriffiths/verbosity#readme",
  "dependencies": {
    "@thebespokepixel/meta": "^1.0.2",
    "@thebespokepixel/time": "^0.5.3",
    "chalk": "^2.4.2",
    "sparkles": "^1.0.1",
    "term-ng": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "ava": "^1.2.1",
    "documentation-theme-bespoke": "^0.5.2",
    "gulp": "^4.0.0",
    "gulp-better-rollup": "^3.4.0",
    "gulp-rename": "^1.4.0",
    "gulp-strip-comments": "^2.5.2",
    "nyc": "^13.3.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "xo": "^0.24.0"
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignore": [
      "index.js",
      "lib/**",
      "docs/**",
      "src/docs/example.js",
      "test/coverage/**"
    ]
  },
  "badges": {
    "github": "MarkGriffiths",
    "npm": "thebespokepixel",
    "codeclimate": "c92b0de0806e1fa6f65a",
    "name": "verbosity",
    "providers": {
      "aux1": {
        "title": "github",
        "text": "source",
        "color": "4E73B6",
